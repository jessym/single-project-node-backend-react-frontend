{
  "name": "single-project-node-backend-react-frontend",
  "version": "1.0.0",
  "main": "server/server.js",
  "scripts": {
    "dev": "concurrently --kill-others-on-fail \"yarn dev:server\" \"yarn dev:client\"",
    "dev:server": "nodemon",
    "dev:client": "cd client && yarn && yarn dev",
    "build": "yarn build:server && yarn build:client",
    "build:server": "rimraf ./build && tsc",
    "build:client": "cd client && yarn && yarn export && mv out ../build/static/",
    "start": "node build/server.js"
  },
  "author": "Jessy",
  "license": "MIT",
  "devDependencies": {
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.8",
    "@types/node": "^14.11.2",
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.4",
    "rimraf": "^3.0.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1"
  }
}
